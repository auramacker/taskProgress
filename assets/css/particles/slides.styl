/*=====================================*/
/* SLIDES
/*=====================================*/

.tp-slides
	position relative
	margin 0
	padding 0
	height 100%
	list-style-type none

	.tp-slide
		display flex
		flex-direction column
		position absolute
		height 100%
		width 100%
		
		// Slide Out
		filter blur(5px)
		opacity 0
		visibility hidden
		transform scale(.8)
		> *
			flex 1 1 auto
		
		&__header
			padding 1rem
			background-color #fff
			border-bottom 1px solid #f4f4f4
			> div
				display flex
				justify-content space-between
				
		
		&__footer
			padding 1rem
			background-color #fff
			border-top 1px solid #f4f4f4
			> div
				display flex
				justify-content space-between
				
		&__main
			height 100%
			overflow-y auto
			padding 1rem
			&::-webkit-scrollbar
				display none
				
			&--center
				display flex
				align-items center
				

		&.is-active
			visibility visible
			animation slide-in .2s linear both
		

@keyframes slide-in
	0%
		filter blur(5px)
		opacity 0
		transform scale(.8)
	100%
		filter none
		opacity 1
		transform scale(1)
